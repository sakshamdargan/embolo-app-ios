<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for Android 12+ (API 31+) -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Use custom splash background -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        
        <!-- Android 12+ Splash Screen API with original logo -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <!-- Use original splash.png for best quality -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/splash_background</item>
        <!-- Instant transition - no animation delay -->
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        
        <!-- Fullscreen layout -->
        <item name="android:windowFullscreen">true</item>
        
        <!-- Handle notch/cutout devices -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
