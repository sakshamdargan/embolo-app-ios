<?xml version="1.0" encoding="utf-8"?>
<!-- Splash logo sized to fit within the circular mask -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Green background to match splash -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash_background" />
        </shape>
    </item>
    
    <!-- Logo with more padding to make it smaller -->
    <item
        android:top="80dp"
        android:bottom="80dp"
        android:left="80dp"
        android:right="80dp">
        <bitmap
            android:src="@drawable/splash"
            android:gravity="center" />
    </item>
</layer-list>
