<?xml version="1.0" encoding="utf-8"?>
<!-- Square drawable with logo centered - designed to work with circular mask -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Green background filling the entire square -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash_background" />
            <size android:width="432dp" android:height="432dp" />
        </shape>
    </item>
    
    <!-- Logo centered with LARGE padding to fit in circle (70% safe zone) -->
    <item
        android:top="108dp"
        android:bottom="108dp"
        android:left="108dp"
        android:right="108dp">
        <bitmap
            android:src="@drawable/splash"
            android:gravity="fill" />
    </item>
</layer-list>
